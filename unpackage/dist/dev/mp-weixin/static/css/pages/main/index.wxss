
page {
  display: flex;
}
.index {
  display: flex;
  flex: 1;
  flex-direction: column;
  overflow: hidden;
  height: 100%;
}
.index-bd {
  width: 750rpx;
  height: 100%;
}
.swiper-item {
  display: block;
  height: 300rpx;
  line-height: 300rpx;
  text-align: center;
}
.swiper-tab {
  width: 100%;
  white-space: nowrap;
  line-height: 64rpx;
  height: 70rpx;
}
.swiper-tab-list {
  font-size: 30rpx;
  width: 150rpx;
  display: inline-block;
  text-align: center;
  color: #777777;
}
.on {
  color: #FF0000;
  border-bottom: 5rpx solid #FF0000;
}
.swiper-box {
  flex: 1;
  width: 100%;
  height: 100%;
}
.swiper-box view {
  text-align: center;
}
.tab-list {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: left;
  border-bottom: 2rpx solid #EFEFF4;
}
.product-item {
  display: flex;
  flex-direction: column;
  width: 345rpx;
  float: left;
  margin-bottom: 20rpx;
  font-size: 26rpx;
}
.product-item .img {
  width: 320rpx;
  height: 320rpx;
}
.product-one {
  padding-left: 20rpx;
  padding-right: 10rpx;
}
.product-two {
  padding-right: 20rpx;
  padding-left: 10rpx;
}